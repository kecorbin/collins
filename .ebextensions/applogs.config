commands:
  00_create_dir:
    command: mkdir -p /var/log/janus
  01_touch_logfile:
    command: touch /var/log/janus/janus.log
  02_change_owner:
    command: sudo chown -R wsgi.wsgi /var/log/janus
  03_change_permissions:
    command: sudo chmod -R g+rw /var/log/janus


files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/janus-logs.conf" :
    mode: "000755"
    owner: wsgi
    group: wsgi
    content: |
      /var/log/janus/janus.log